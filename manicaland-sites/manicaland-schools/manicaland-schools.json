{
    "label": "Manicaland Schools",
    "source": {
        "type": "geojson",
        "featureType": "Point",
        "data": "data/Manicaland-SchoolsWash-KI DB.csv"
    },
    "type": "symbol",
    "minzoom": 0,
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "geo-columns": ["LONGITUDE (X)", "LATITUDE (Y)"],
    "layout": {
        "text-size": 14,
        "text-field": "{SCHOOL NAME}",
        "text-transform": "uppercase",
        "text-max-width": 20,
        "text-offset": [
            0,
            1
        ],
        "icon-image": "ranger-station-15-black",
        "icon-allow-overlap": false,
        "icon-ignore-placement": false
    },
    "popup": {
        "join": [
            "SCHOOL NAME",
            "SCHOOL NAME"
        ],
        "body": "<p style=text-align:left;> <b>Name:</b> {{SCHOOL NAME}}</p>"
      },
    "visible": false,
    "category": "Boundaries & Labels"
}