{
    "label": "Zimbabwe Towns",
    "source": {
        "type": "geojson",
        "featureType": "Point",
        "data": "https://raw.githubusercontent.com/onaio/zim-data/master/settlements-services/towns/zim_towns.csv"
    },
    "type": "symbol",
    "minzoom": 0,
    "paint": {
        "text-color": "#000",
        "text-halo-color": "#fff",
        "text-halo-width": 1.3,
        "text-halo-blur": 1
    },
    "geo-columns": ["LONG", "LAT"],
    "layout": {
        "text-size": 14,
        "text-field": "{PPPTNAME}",
        "text-transform": "uppercase",
        "text-max-width": 20,
        "text-offset": [
            0,
            1
        ],
        "icon-image": "triangle-15-green",
        "icon-allow-overlap": false,
        "icon-ignore-placement": false
    },
    "visible": false,
    "category": "Boundaries & Labels"
}